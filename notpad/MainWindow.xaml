<Window x:Class="notpad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notpad"
        mc:Ignorable="d"
        Title="Notpad" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" BorderBrush="AliceBlue" BorderThickness="1">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuItem_Open"/>
                <MenuItem Header="_Close" Click="MenuItem_Close"/>
                <MenuItem Header="_Save as..." Click="MenuItem_SaveAs"/>
                <MenuItem Header="_Print..." Click="MenuItem_Print"/>
                <MenuItem Header="E_xit" Click="MenuItem_Exit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Cut" Click="MenuItem_Cut"/>
                <MenuItem Header="_Copy" Click="MenuItem_Copy"/>
                <MenuItem Header="_Paste" Click="MenuItem_Paste"/>
                <MenuItem Header="_Font..."/>
            </MenuItem>

        </Menu>
        <Grid>
            <TextBox x:Name="Paper" Height="Auto" Margin="0" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" />
        </Grid>
    </DockPanel>

</Window>
