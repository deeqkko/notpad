<Window x:Class="notpad.FontWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:notpad.Properties"
        xmlns:local="clr-namespace:notpad"
        mc:Ignorable="d"
        Height="179" Width="293.5">
    <Grid HorizontalAlignment="Left" Width="284">
        <Button Content="{x:Static p:Resources.OK_Button}" HorizontalAlignment="Left" Margin="22,99,0,0" VerticalAlignment="Top" Width="101" Height="31" Click="Button_OK"/>
        <Button Content="{x:Static p:Resources.Cancel_Button}" Margin="159,99,0,0" VerticalAlignment="Top" Height="31" HorizontalAlignment="Left" Width="101" IsCancel="True"/>
        <ComboBox x:Name="Size" HorizontalAlignment="Left" Margin="90,42,0,0" VerticalAlignment="Top" Width="101" SelectionChanged="Size_SelectionChanged">

        </ComboBox>
        <TextBlock x:Name="FontSizeLabel" HorizontalAlignment="Left" Margin="90,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" TextAlignment="Center" Height="22" TextOptions.TextHintingMode="Animated"><Run Text="{x:Static p:Resources.FontWindowTitle}"/><LineBreak/><Run/></TextBlock>

    </Grid>
</Window>
